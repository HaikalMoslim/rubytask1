<%= form_with model: [@post, @post.comments.build] do |form|%>
    <p>
        <%= form.label :title%><br>
        <%= form.text_field :title%>
    </p>
    <p>
        <%= form.label :content%><br>
        <%= form.text_field :content%>
    </p>
    <div>
    <%= form.label :status %><br>
    <%= form.select :status, Visible::VALID_STATUSES, selected: 'public'%>
    </div>
    <p>
    <%= form.submit%>
    </p>
<%end%>